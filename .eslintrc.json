{
	"env": {
		"es6": true,
		"node": true
	},
	"extends": "standard",
	"globals": {
		"Atomics": "readable",
		"SharedArrayBuffer": "readable"
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"rules": {
		"semi": "off",
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"no-tabs": "off",
		"eol-last": "off",
		"generator-star-spacing": "off",
		"quotes": "warn",
		"react/jsx-uses-vars": [
			2
		],
		"comma-dangle": "off"
	}
}